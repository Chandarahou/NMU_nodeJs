<table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope="col">Phone</th>
        <th scope="col">Image</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% student.forEach(element => { %>
        <tr>
          
          <td><%= element.firstName %></td>
          <td><%= element.lastName %></td>
          <td><%= element.phone %></td>
          <td><img width="100px" src="/<%= element.image %>" alt="" srcset=""></td>
          <td>
            <a href="/edit/<%= element.id %>" class="btn btn-primary"><i class="fa-solid fa-user-pen"></i></a>
            <a onclick="myFunction('<%= element.id %>')"   class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
          </form>
          </td>
        </tr>

      <% }) %>

    </tbody>
</table>
<script>
  function myFunction(id){
    Swal.fire({
    title: "Are you sure?",
    text: "You won't be able to revert this!",
    icon: "warning",
    showCancelButton: true,
    confirmButtonColor: "#3085d6",
    cancelButtonColor: "#d33",
    confirmButtonText: "Yes, delete it!"
}).then((result) => {
  if (result.isConfirmed) {
    window.location = '/delete/'+id
    Swal.fire({
      title: "Deleted!",
      text: "Your file has been deleted.",
      icon: "success"
    });
  }
});
}
</script>

