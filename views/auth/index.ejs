<table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Password</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
        <% user.forEach(element => { %>
            <tr>
              
              <td scope="row"><%= element.fullName %></td>
              <td><%= element.email %></td>
              <td><%= element.password %></td>
              <td>
                <a href="/user/edit/<%= element.id %>" class="btn btn-primary"><i class="fa-solid fa-user-pen"></i></a>
                <a onclick="myFunction('<%= element.id %>')"   class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
              </form>
              </td>
            </tr>
    
          <% }) %>
    </tbody>
</table>

<script>
  function myFunction(id){
    Swal.fire({
  title: "Are you sure?",
  text: "You won't be able to revert this!",
  icon: "warning",
  showCancelButton: true,
  confirmButtonColor: "#3085d6",
  cancelButtonColor: "#d33",
  confirmButtonText: "Yes, delete it!"
}).then((result) => {
  if (result.isConfirmed) {
    window.location = '/user/delete/'+id
    Swal.fire({
      title: "Deleted!",
      text: "Your file has been deleted.",
      icon: "success"
    });
  }
});
}
</script>

